{{define "listarTickets"}}
{{template "cabecera"}} 
    <a name="" id="" class="btn btn-primary" href="/crearTicket" role="button">Agregar Ticket</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>fecha de creacion</th>
                <th>fecha actualizacion</th>
                <th>abierto</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
{{range.}}
            <tr>
                <td>{{.Id}}</td>
                <td>{{.Usuario}}</td>
                <td>{{.FechaCreacion}}</td>
                <td>{{.FechaActualizacion}}</td>   
                <td>{{.Estatus}}</td>              
                <td>
                    <a name="" id="" class="btn btn-warning" href="/editar?id={{.Id}}" role="button">EDITAR</a> 
                    | 
                    <a name="" id="" class="btn btn-danger" href="/borrar?id={{.Id}}" role="button">BORRAR</a>
                </td>
            </tr>
{{end}}
    
        </tbody>
    </table>

{{template "pie"}}
{{end}}